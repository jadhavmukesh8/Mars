<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <TableSelectDialog
        title="{i18nlocal>FormulaKeyTitle}"
        confirm=".fnVHFormulaConfirm"
        search=".fnVHFormulaSearch"
        items="{path: 'oSrvModel>/ET_Formula_KeySet'}"
        resizable="true"
        draggable="true"
        contentWidth="20rem"
    >
        <ColumnListItem>
            <cells>
                <ObjectIdentifier title="{oSrvModel>Formula_Key}" />
                <Text text="{oSrvModel>Formula_Rule}"/>
                <Text text="{oSrvModel>Formula_text}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column width="5em">
                <header>
                    <Label text="{i18nlocal>VH.Formula_Key}" design="Bold" />
                </header>
            </Column>
            <Column width="5em">
                <header>
                    <Label text="{i18nlocal>VH.Formula}" design="Bold" />
                </header>
            </Column>
            <Column width="5em">
                <header>
                    <Label text="{i18nlocal>VH.Formula_text}" design="Bold" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
